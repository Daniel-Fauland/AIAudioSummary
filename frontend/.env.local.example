# Backend URL (auto-populated on Render via service discovery)
BACKEND_INTERNAL_URL=http://localhost:8080

# Backend WebSocket URL (for realtime transcription)
NEXT_PUBLIC_BACKEND_WS_URL=ws://localhost:8080

# Google OAuth (https://console.cloud.google.com/apis/credentials)
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# Random secret for session encryption (generate with: openssl rand -base64 32)
AUTH_SECRET=

# Comma-separated email allowlist (empty = allow all authenticated users)
ALLOWED_EMAILS=

# Required for non-Vercel deployments
AUTH_TRUST_HOST=true
