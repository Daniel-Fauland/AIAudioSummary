# Backend URL (set to http://backend:8080 when running via Docker Compose)
BACKEND_INTERNAL_URL=http://localhost:8080

# Backend WebSocket URL (for realtime transcription)
NEXT_PUBLIC_BACKEND_WS_URL=ws://localhost:8080

# Google OAuth (https://console.cloud.google.com/apis/credentials)
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# Random secret for session encryption (generate with: openssl rand -base64 32)
AUTH_SECRET=

# Required for non-Vercel deployments
AUTH_TRUST_HOST=true

# Explicit callback base URL â€” prevents Auth.js from picking up 0.0.0.0 when running in Docker
# Set to your public domain in production (e.g. https://yourdomain.com)
AUTH_URL=http://localhost:3000

# Imprint / Legal info (displayed in the footer modals)
NEXT_PUBLIC_OWNER_NAME=
NEXT_PUBLIC_OWNER_STREET=
NEXT_PUBLIC_OWNER_CITY=
NEXT_PUBLIC_OWNER_COUNTRY=
NEXT_PUBLIC_OWNER_EMAIL=
NEXT_PUBLIC_OWNER_PHONE=
